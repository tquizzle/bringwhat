# Server Configuration
PORT=3000

# Database Configuration
# Options: 'sqlite', 'postgres', 'mysql'
DB_TYPE=sqlite

# SQLite Config
DB_PATH=./data/bringwhat.db

# Postgres/MySQL Config (Generic URL)
# DATABASE_URL=postgresql://user:password@host:5432/dbname
# DATABASE_URL=mysql://user:password@host:3306/dbname

# Postgres/MySQL Config (Specific Variables - Alternative to URL)
# DB_HOST=localhost
# DB_PORT=5432   # or 3306 for mysql
# DB_USER=myuser
# DB_PASS=mypassword
# DB_NAME=bringwhat
# DB_SSL=false

# AI Configuration (Optional)
# AI_PROVIDER=gemini  # gemini (default), openai
# AI_BASE_URL=        # e.g. http://localhost:11434/v1 for Ollama
# AI_MODEL=           # e.g. gpt-4o-mini or llama3
# API Key for Gemini (AI Features)
API_KEY=
